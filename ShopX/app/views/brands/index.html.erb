<br><br>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-list"></span>Brands
                     <div class="btn-group pull-right">
                            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-cog" style="margin-right: 0px;"></span>
                            </button>
                            <ul class="dropdown-menu slidedown">
                           
                                <li><%= link_to 'New Brand', new_brand_path, class:"glyphicon glyphicon-plus" %></li>
                                <li><%= link_to 'Products', products_path, class:"glyphicon glyphicon-list" %></li>
                            </ul>
                        </div>
                </div>
                <div class="panel-body">
                    <ul class="list-group">
                        <% @brands.each do |brand| %>
                            <li class="list-group-item">
                                <div class="checkbox">
                                    <label for="checkbox">
                                        <%= brand.sName %>
                                    </label>
                                </div>
                                <div class="pull-right action-buttons">
                                    <%= link_to 'Show', brand, :class=>"glyphicon glyphicon-search" %>
                                    <%= link_to 'Edit', edit_brand_path(brand), :class=>"glyphicon glyphicon-pencil" %>
                                    <%= link_to 'Destroy', brand, method: :delete, data: { confirm: "Are you sure?" }, :class=>"glyphicon glyphicon-pencil"%>
                                </div>
                            </li>
                        <%end%>
                    </ul>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>
                                Total Count <span class="label label-info"><%=@brands.count%></span></h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>